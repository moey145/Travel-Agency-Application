<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>  

<VBox alignment="CENTER" fx:controller="controller.Trip.DisplayTripController" styleClass="background" prefHeight="700.0" prefWidth="800.0" spacing="24" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" styleClass="card" maxWidth="750" spacing="20">
        <ImageView fitWidth="700" fitHeight="160" styleClass="image-view">
            <image>
                <Image url="@/image/trip.png" preserveRatio="true"/>
            </image>
        </ImageView>    
        <Label text="Your Trip Itinerary" styleClass="heading"/>
        <Label text="Review your complete travel plan" styleClass="subheading"/>
        <Separator maxWidth="650"/>
        <ListView fx:id="tripsLv" styleClass="list-view" prefWidth="700" prefHeight="300"/>
        <HBox alignment="center" spacing="16" maxWidth="400">
            <Button fx:id="viewindividualBtn" text="View Details" styleClass="button" onAction="#handleViewIndividual" prefWidth="180"/>
            <Button fx:id="exitBtn" text="Close" styleClass="button-secondary" onAction="#handleExit" prefWidth="180"/>
        </HBox>       
    </VBox>
    <stylesheets>
        <URL value="@/view/style.css"/>
    </stylesheets> 
</VBox>