<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" fx:controller="controller.Flights.ModifyFlightsController" styleClass="background" prefHeight="420.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
        <ImageView fitWidth="800" fitHeight="200">
        <image>
            <Image url="@/image/flight.png" preserveRatio="true"/>
        </image>
    </ImageView>    
    <Separator/>
    <Label text="Add a Flight" styleClass="heading"/>
    <Separator/>
    <GridPane alignment="center" hgap="10" vgap="10">
    <Label text="Takeoff:" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="takeoffTf" styleClass="textfield" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Landing:" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="landingTf" styleClass="textfield" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    <HBox alignment="center" prefWidth="999999">
    <Button fx:id="removeflightBtn" text="Remove Flight"  disable="true" styleClass="button" onAction="#handleRemoveFlight" prefWidth="999999"/>
    <Button fx:id="exitBtn" text="Close" styleClass="button" onAction="#handleExit" prefWidth="999999" />
    </HBox>
    <stylesheets>
    <URL value="@/view/style.css"/>
    </stylesheets>  
</VBox>