<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<VBox style="-fx-padding: 0 10 10 10;" fx:controller="controller.Error.ErrorController" alignment="CENTER" styleClass="background" prefHeight="250.0" prefWidth="400.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fitWidth="500" fitHeight="125">
        <image >
            <Image url="@/image/error.png" preserveRatio="true"/>
        </image>
    </ImageView>    
    <Separator/>
    <Label text="Error" styleClass="heading"/>
    <Separator/>
    <Label text="${controller.name}" styleClass="errorLabel"/>
    <Label text="${controller.exception.message}"/>
    <Button fx:id="exitBtn" text="Close" styleClass="button" prefWidth="9999" onAction="#handleExit"/>
    <stylesheets>
    <URL value="@/view/style.css"/>
    </stylesheets>  
</VBox>